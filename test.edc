#define gem(n) \
    group { \
        images { \
            image: "gem"n".png" COMP; \
        } \
\
        name: "gem"n; \
        parts { \
            part { \
                name: "gem"n"_icon"; \
                type: IMAGE; \
                mouse_events: 1; \
                description { \
                    state: "default" 0.0; \
                    aspect: 1 1; \
                    aspect_preference: BOTH; \
                    image { \
                        normal: "gem"n".png"; \
                    } \
                    rel1.relative: 0.0 0.0; \
                    rel2.relative: 1.0 1.0; \
                } \
                description { \
                    state: "right" 0.0; \
                    inherit: "default" 0.0; \
                    rel1.relative: 1.0 0.0; \
                    rel2.relative: 2.0 1.0; \
                } \
                description { \
                    state: "left" 0.0; \
                    inherit: "default" 0.0; \
                    rel1.relative: -1.0 0.0; \
                    rel2.relative: 0.0 1.0; \
                } \
            } \
        } \
\
        programs { \
            program { \
                name: "gem"n"_clicked"; \
                signal: "mouse,clicked,1"; \
                source: "gem"n"_icon"; \
                action: SIGNAL_EMIT "clicked" n; \
            } \
            program { \
                name: "gem"n"_right"; \
                signal: "mouse,clicked,1"; \
                source: "gem"n"_icon"; \
                action:  STATE_SET "right" 0.0; \
                transition: LINEAR 0.2; \
                target: "gem"n"_icon"; \
            } \
            program { \
                name: "gem"n"_left"; \
                signal: "mouse,clicked,3"; \
                source: "gem"n"_icon"; \
                action:  STATE_SET "left" 0.0; \
                transition: LINEAR 0.2; \
                target: "gem"n"_icon"; \
            } \
        } \
    }


